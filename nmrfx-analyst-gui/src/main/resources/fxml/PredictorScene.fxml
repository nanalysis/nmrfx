<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane id="AnchorPane" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.nmrfx.analyst.gui.molecule.PredictorSceneController">
    <top>
        <Button fx:id="predictButton" text="Predict" onAction="#predict"/>
    </top>
    <center>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints minWidth="100.0" prefWidth="100.0"/>
                <ColumnConstraints minWidth="200.0" prefWidth="200.0"/>
            </columnConstraints>

            <children>
                <ChoiceBox fx:id="targetType" GridPane.columnIndex="0"
                           GridPane.rowIndex="0"/>
                <ChoiceBox fx:id="targetChoice" minWidth="125"
                           GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label text="Protein" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <ChoiceBox fx:id="proteinChoice" minWidth="125"
                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label text="RNA" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <ChoiceBox fx:id="rnaChoice" minWidth="125"
                           GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label text="Small Molecule" GridPane.columnIndex="0"
                       GridPane.rowIndex="3"/>
                <ChoiceBox fx:id="molChoice" minWidth="125"
                           GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            </children>
        </GridPane>
    </center>
</BorderPane>
